{
  "name": "react-infinite-canvas",
  "version": "2.3.0",
  "description": "An Infinite Canvas Component for React where you can place your component anywhere on the canvas with zoom in, zoom out and panning functionality. It also supports custom components to control the canvas.",
  "main": "./dist/react-infinite-canvas.umd.js",
  "module": "./dist/react-infinite-canvas.es.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "exports": {
    "import": "./dist/react-infinite-canvas.es.js",
    "require": "./dist/react-infinite-canvas.umd.js",
    "types": "./dist/main.d.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "keywords": [
    "infinite",
    "canvas",
    "workflow",
    "diagram",
    "space",
    "react",
    "typescript",
    "css modules",
    "vite",
    "component",
    "integration"
  ],
  "engines": {
    "node": ">=10"
  },
  "files": [
    "*.md",
    "dist"
  ],
  "author": "Karthik Aravind",
  "license": "MIT",
  "resolutions": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "peerDependencies": {
    "react": ">=17 <20",
    "react-dom": ">=17 <20"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@types/d3-selection": "^3.0.10",
    "@types/d3-transition": "^3.0.9",
    "@types/d3-zoom": "^3.0.8",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.2.1",
    "d3-selection": "3.0.0",
    "d3-zoom": "3.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-css-injected-by-js": "^3.4.0",
    "vite-plugin-dts": "^3.7.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KarthikAravindR/infinite-canvas.git"
  }
}
